<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background = "#334D5C"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/Tuer_ID"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView3"
            android:layout_toLeftOf="@+id/Tank_Id"
            android:layout_toStartOf="@+id/Tank_Id"
            android:background="#E27A3F"
            android:text="@string/C_TÃ¼ren_bereit"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/Tank_Id"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E27A3F"
            android:text="@string/C_Tank_bereit"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_above="@+id/textView4"
            android:layout_alignLeft="@+id/Startbutton_ID"
            android:layout_alignStart="@+id/Startbutton_ID"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp" />

        <CheckBox
            android:id="@+id/Route_ID"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:background="#E27A3F"
            android:text="@string/C_Route_bereit"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_above="@+id/textView4"
            android:layout_toRightOf="@+id/Tank_Id"
            android:layout_toEndOf="@+id/Tank_Id"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Tuer_ID"
            android:layout_marginTop="24dp"
            android:text="__________________________________________"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/car_front"
            app:srcCompat="@drawable/car_front" />

        <Button
            android:id="@+id/Startbutton_ID"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#E27A3F"
            android:text="@string/C_Fahrzeug_starten" />

        <TextView
            android:id="@+id/Aktiv_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/Route_ID"
            android:layout_alignRight="@+id/Route_ID"
            android:layout_alignTop="@+id/Startbutton_ID"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@+id/Startbutton_ID"
            android:textAllCaps="true"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>